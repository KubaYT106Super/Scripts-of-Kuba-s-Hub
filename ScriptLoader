-- Get the local player and their GUI
local player = game:GetService("Players").LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create the main ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- Create the black draggable frame (border)
local dragFrame = Instance.new("Frame")
dragFrame.Size = UDim2.new(0, 500, 0, 320)  -- Size of the entire GUI with draggable area
dragFrame.Position = UDim2.new(0.5, -250, 0.5, -160)  -- Center the GUI
dragFrame.BackgroundColor3 = Color3.new(0, 0, 0)  -- Black color for the draggable area
dragFrame.BorderSizePixel = 0  -- No border to the drag area
dragFrame.Active = true
dragFrame.Draggable = true  -- Make the black frame draggable
dragFrame.Parent = screenGui

-- Create the inner main frame (inside content, white background)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 480, 0, 250)  -- Smaller than the draggable area
mainFrame.Position = UDim2.new(0, 10, 0, 10)  -- 10px padding from the draggable black area
mainFrame.BackgroundColor3 = Color3.new(1, 1, 1)  -- White background
mainFrame.BorderColor3 = Color3.new(1, 0, 0)  -- Red border for the inside content frame
mainFrame.BorderSizePixel = 4
mainFrame.Parent = dragFrame  -- Parent to the black draggable frame

-- Create the close button (X) positioned outside the top-right corner of the main frame
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)  -- Size of the close button
closeButton.BackgroundColor3 = Color3.new(1, 0, 0)  -- Red color for the close button
closeButton.Text = "X"  -- Label the button with 'X'
closeButton.TextColor3 = Color3.new(1, 1, 1)  -- White color for the text
closeButton.Font = Enum.Font.SourceSansBold  -- Bold font
closeButton.TextSize = 20  -- Adjust text size
closeButton.Parent = dragFrame  -- Parent to the draggable area (dragFrame)

-- Position the close button just outside the top-right corner of the main frame
closeButton.AnchorPoint = Vector2.new(1, 0)
closeButton.Position = UDim2.new(1, 15, 0, -15)  -- 15px away from the top-right corner of the black frame

-- Close the GUI when the close button is clicked
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()  -- Remove the entire GUI (including the mainFrame)
end)

-- Create a ScrollingFrame for buttons inside the main frame (white area)
local scrollingFrame = Instance.new("ScrollingFrame")
scrollingFrame.Size = UDim2.new(1, -20, 1, -20)  -- Fit inside the main frame with some padding
scrollingFrame.Position = UDim2.new(0, 10, 0, 10)  -- 10px padding inside the main frame
scrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 500)  -- Larger scroll area to hold the buttons
scrollingFrame.ScrollBarThickness = 10
scrollingFrame.Parent = mainFrame

-- Create example buttons (1 to 10 without functions)
for i = 1, 10 do
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -20, 0, 40)  -- Button size (full width minus padding)
    button.Position = UDim2.new(0, 10, 0, (i - 1) * 50)  -- Position each button below the last one
    button.BackgroundColor3 = Color3.new(0.3, 0.7, 0.3)
    button.Text = "Button " .. tostring(i)  -- Set the button text
    button.Parent = scrollingFrame
end

-- Adjust CanvasSize based on the number of buttons
scrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 10 * 50)  -- 50 pixels per button, 10 buttons
